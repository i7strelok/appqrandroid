<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppQR" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/hercom_1</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.AppQR.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Estilos para los LinearLayout-->
    <style name="LinearLayoutStyle" parent="Base.Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Estilos para los EditText-->
    <style name="EditTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHighlight">@color/hercom_1</item>
        <item name="android:textColorLink">@color/hercom_1</item>
        <item name="android:textCursorDrawable">@color/hercom_1</item>
        <item name="backgroundTint">@color/hercom_1</item>
    </style>
    <!-- Estilos para los CheckBox-->
    <style name="CheckBoxStyle" parent="Base.Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:layout_marginLeft">16sp</item>
        <item name="android:layout_marginRight">16sp</item>
        <item name="android:checked">true</item>
        <item name="android:textSize">16sp</item>
        <item name="buttonTint">@color/hercom_1</item>
    </style>
    <!-- Estilos para los Botones-->
    <style name="ButtonStyle" parent="Base.Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:layout_marginLeft">16sp</item>
        <item name="android:layout_marginRight">16sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Estilos para los TextView-->
    <style name="TextViewStyle" parent="Base.Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:layout_marginLeft">16sp</item>
        <item name="android:layout_marginRight">16sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Estilos para los Textos que son tÃ­tulos-->
    <style name="TitleStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:layout_marginLeft">16sp</item>
        <item name="android:layout_marginRight">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">21sp</item>
    </style>
    <!-- Estilos para los Textos que son descripciones-->
    <style name="DescriptionStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:layout_marginLeft">16sp</item>
        <item name="android:layout_marginRight">16sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Estilos para los botones flotantes-->
    <style name="FloatingButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/hercom_1</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="Theme.AppQR.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.AppQR.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/hercom_1</item>
        <item name="titleTextColor">@color/white</item>
    </style>

</resources>